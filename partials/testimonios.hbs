<section id="testimonios" class="py-5 bg-light" style="background-color: #285c8f;">
    <div class="container">
      <div class="row">
        <div class="col text-center">
          <h2>Testimonios</h2>
          <p>Lo que nuestros clientes dicen sobre nosotros:</p>
        </div>
      </div>
      <div class="row">
        {{#each testimonios}}
        <div class="col-md-8 mx-auto">
          <div class="testimonial">
            <p class="lead">"{{description}}"</p>
            <p class="text-right">{{name}}</p>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </section>